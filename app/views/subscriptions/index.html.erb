<h1>ALL THE SUBSCRIPTIONS</h1>

<% @subscriptions.each do |subscription| %>
<%= link_to subscription.tier, subscription_path(subscription) %>
  <%= subscription.price %>
  <p><%= link_to "Edit", edit_subscription_path(subscription), :class => "btn btn-default" %></p>
  <p><%= link_to "Delete", subscription_path(subscription),    :data => {:confirm => "You sure?",
                                                    :method => "delete"},:class => "btn btn-danger" %></p>
<% end %>
